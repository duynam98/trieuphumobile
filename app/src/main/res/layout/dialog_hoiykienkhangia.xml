<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/margin1">

        <LinearLayout
            android:id="@+id/tv_cauhoi"
            android:layout_width="350dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_marginRight="@dimen/margin2"
            android:background="@drawable/custorm_bghhelp_goidien"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="@color/text_cauhoi"
            android:textStyle="bold">

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/bieudotrogiup"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_socauhoi"
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="@dimen/margin1"
            android:background="@drawable/custorm_goidien"
            android:gravity="center"
            android:text="@string/help_hoiykienkhangia"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:text="@string/btn_dong"
            android:layout_gravity="bottom|center"
            android:background="@drawable/custorm_button"
            android:layout_margin="@dimen/margin1"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </FrameLayout>

</LinearLayout>